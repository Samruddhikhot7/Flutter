import 'package:flutter/material.dart'; // 1Ô∏è‚É£ Importing Flutter material package

void main() {                          // 2Ô∏è‚É£ main() function - entry point
  runApp(MyApp());                     // 3Ô∏è‚É£ runApp() - runs the root widget
}

class MyApp extends StatelessWidget {  // 4Ô∏è‚É£ MyApp is a StatelessWidget
  @override
  Widget build(BuildContext context) { // 5Ô∏è‚É£ build() method returns the widget tree
    return MaterialApp(                // 6Ô∏è‚É£ MaterialApp - sets up the app environment
      home: HomeScreen(),              // 7Ô∏è‚É£ home - sets the default screen
    );
  }
}

class HomeScreen extends StatelessWidget { // 8Ô∏è‚É£ Another StatelessWidget
  @override
  Widget build(BuildContext context) {
    return Scaffold(                     // 9Ô∏è‚É£ Scaffold - basic visual layout structure
      appBar: AppBar(                    // üîü AppBar - top bar
        title: Text('Stateless Widget'), // 11Ô∏è‚É£ Text widget inside AppBar
      ),
      body: Center(                      // 12Ô∏è‚É£ Center - centers its child
        child: Container(
          child :Text(                     // 13Ô∏è‚É£ Text - displays static text
          'Hello, Flutter!',style: TextStyle(fontSize: 24),),
          color: Colors.blue,// 14Ô∏è‚É£ Styling the text
        ),
      ),
    );
  }
}
